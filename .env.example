# LangGraph Server with Auth - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the proxy server (external facing)
PORT=8000

# Internal port for LangGraph server (should be different from PORT)
LANGGRAPH_INTERNAL_PORT=8123

# Environment: development, staging, or production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# AUTHENTICATION
# =============================================================================

# API key for authentication (leave empty to disable auth)
# Generate with: python api_key_generator.py
ROCKET_API_KEY=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins for CORS
# Examples:
# - For development: http://localhost:3000,http://127.0.0.1:3000
# - For production: https://yourdomain.com,https://www.yourdomain.com
# - Leave empty to disable CORS
CORS_ALLOWED_ORIGINS=

# =============================================================================
# DATABASE
# =============================================================================

# Database connection string
# Examples:
# - PostgreSQL: postgresql://user:password@localhost:5432/dbname
# - SQLite: sqlite:///./database.db
DATABASE_URI=

# =============================================================================
# LANGSMITH INTEGRATION (OPTIONAL)
# =============================================================================

# LangSmith API key for tracing (optional)
LANGSMITH_API_KEY=

# Enable LangSmith tracing: true or false
LANGSMITH_TRACING=false

# =============================================================================
# PRODUCTION DEPLOYMENT VARIABLES
# =============================================================================

# These are typically set by your deployment platform (Render, Railway, etc.)
# and don't need to be in your .env file for local development

# HOST=0.0.0.0  # Usually set by platform
# RENDER=true   # Set by Render platform
# RAILWAY_ENVIRONMENT=production  # Set by Railway platform